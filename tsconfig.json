{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "ES2019.Array"
    ],
    "outDir": "./dist",
    "strict": true,
    "types": [
      "@types/node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "examples"
  ]
}